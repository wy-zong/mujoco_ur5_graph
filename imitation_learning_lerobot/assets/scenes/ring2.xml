<mujoco model="PulleyStatic">

  <default>
  <!-- 把所有幾何預設的滑動摩擦拉高；spin/roll 維持很小避免抖動 -->
   <geom friction="5.0 1 2" contype="1" conaffinity="1"/>
  </default>
  <option timestep="0.002"/>
  <statistic center="0 -.3 1" extent="2.5"/>

  <asset>
    <texture name="texcyl" type="2d" builtin="checker"
             rgb1=".3 .3 .3" rgb2=".15 .15 .15"
             width="512" height="512" mark="cross" markrgb=".22 .22 .22"/>
    <material name="matcyl" reflectance="0.3" texture="texcyl" texrepeat="3 3" texuniform="true"/>
  </asset>

  <worldbody>
    <!-- <geom type="plane" size="5 5 0.1" rgba=".9 .9 .9 1"/> -->

    <flexcomp name="cable" type="circle" count="40 1 1" spacing=".02 1 1" dim="1"
              radius="0.006" pos="1.4 0.2 0.745" rgba="1 0 0 1">
      <edge equality="true"/>
      <!-- <geom type="capsule" size="0.006" friction="2.0 0.01 0.002" contype="1" conaffinity="1" rgba="1 0 0 1"/> -->
    </flexcomp>

    <!-- 左右圓柱都移除 joint，成為固定剛體 -->
    <!-- <body name="left"  pos="1.4 0.4 0.77">
      <geom type="cylinder" size=".05 .05" density="1" material="matcyl"/>
    </body>
    <body name="right" pos="1.4 0.7 0.77">
      <geom type="cylinder" size=".05 .05" density="1" material="matcyl"/>
    </body> -->
  </worldbody>
</mujoco>
