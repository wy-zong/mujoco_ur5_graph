      <geom name="model_col_g17" class="model_collision" mesh="model_col_17"/>
      <geom name="model_col_g18" class="model_collision" mesh="model_col_18"/>
      <geom name="model_col_g19" class="model_collision" mesh="model_col_19"/>
      <geom name="model_col_g20" class="model_collision" mesh="model_col_20"/>
      <geom name="model_col_g21" class="model_collision" mesh="model_col_21"/>
      <geom name="model_col_g22" class="model_collision" mesh="model_col_22"/>
      <geom name="model_col_g23" class="model_collision" mesh="model_col_23"/>
      <geom name="model_col_g24" class="model_collision" mesh="model_col_24"/>
      <geom name="model_col_g25" class="model_collision" mesh="model_col_25"/>
      <geom name="model_col_g26" class="model_collision" mesh="model_col_26"/>
      <geom name="model_col_g27" class="model_collision" mesh="model_col_27"/>
      <geom name="model_col_g28" class="model_collision" mesh="model_col_28"/>
      <geom name="model_col_g29" class="model_collision" mesh="model_col_29"/>
      <geom name="model_col_g30" class="model_collision" mesh="model_col_30"/>
      <geom name="model_col_g31" class="model_collision" mesh="model_col_31"/>
    </body>
  </worldbody>
</mujoco>
