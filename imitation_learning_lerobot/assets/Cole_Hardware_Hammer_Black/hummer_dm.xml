<mujoco model="mdl_model">
  <compiler angle="radian" inertiafromgeom="true" autolimits="true"/>
  <option timestep="0.01" integrator="implicitfast" solver="PGS"
          gravity="0 0 -9.81" cone="elliptic" noslip_iterations="200" impratio="40"/>

  <asset>
    <texture type="2d" name="mdl_texture" file="texture.png"/>
    <material name="mdl_material_0" texture="mdl_texture" specular="0.5" shininess="0.5"/>

    <!-- 視覺主網格 -->
    <mesh name="mdl_model_visual" file="model.obj"/>

    <!-- 分塊碰撞網格（0..31） -->
    <mesh name="mdl_col_0"  file="model_collision_0.obj"/>
    <mesh name="mdl_col_1"  file="model_collision_1.obj"/>
    <mesh name="mdl_col_2"  file="model_collision_2.obj"/>
    <mesh name="mdl_col_3"  file="model_collision_3.obj"/>
    <mesh name="mdl_col_4"  file="model_collision_4.obj"/>
    <mesh name="mdl_col_5"  file="model_collision_5.obj"/>
    <mesh name="mdl_col_6"  file="model_collision_6.obj"/>
    <mesh name="mdl_col_7"  file="model_collision_7.obj"/>
    <mesh name="mdl_col_8"  file="model_collision_8.obj"/>
    <mesh name="mdl_col_9"  file="model_collision_9.obj"/>
    <mesh name="mdl_col_10" file="model_collision_10.obj"/>
    <mesh name="mdl_col_11" file="model_collision_11.obj"/>
    <mesh name="mdl_col_12" file="model_collision_12.obj"/>
    <mesh name="mdl_col_13" file="model_collision_13.obj"/>
    <mesh name="mdl_col_14" file="model_collision_14.obj"/>
    <mesh name="mdl_col_15" file="model_collision_15.obj"/>
    <mesh name="mdl_col_16" file="model_collision_16.obj"/>
    <mesh name="mdl_col_17" file="model_collision_17.obj"/>
    <mesh name="mdl_col_18" file="model_collision_18.obj"/>
    <mesh name="mdl_col_19" file="model_collision_19.obj"/>
    <mesh name="mdl_col_20" file="model_collision_20.obj"/>
    <mesh name="mdl_col_21" file="model_collision_21.obj"/>
    <mesh name="mdl_col_22" file="model_collision_22.obj"/>
    <mesh name="mdl_col_23" file="model_collision_23.obj"/>
    <mesh name="mdl_col_24" file="model_collision_24.obj"/>
    <mesh name="mdl_col_25" file="model_collision_25.obj"/>
    <mesh name="mdl_col_26" file="model_collision_26.obj"/>
    <mesh name="mdl_col_27" file="model_collision_27.obj"/>
    <mesh name="mdl_col_28" file="model_collision_28.obj"/>
    <mesh name="mdl_col_29" file="model_collision_29.obj"/>
    <mesh name="mdl_col_30" file="model_collision_30.obj"/>
    <mesh name="mdl_col_31" file="model_collision_31.obj"/>
  </asset>

  <default>
    <default class="mdl_visual">
      <geom type="mesh" contype="0" conaffinity="0" group="2"/>
    </default>
    <default class="mdl_collision">
      <!-- friction = [slide spin roll]；density 依材質調整 -->
      <geom type="mesh" group="3" density="900"
            friction="1.0 0.005 0.001"
            solimp="0.9 0.995 0.005" solref="0.001 1"/>
    </default>
  </default>

  <worldbody>
    <!-- 注意：不再宣告 floor / camera，以免和 scene 撞名 -->

    <!-- 主體：freejoint + 視覺/碰撞 -->
    <body name="mdl_body" pos="1.4 0.65 0.73" childclass="mdl_visual">
      <freejoint/>

      <!-- 視覺 -->
      <geom name="mdl_visual_geom" material="mdl_material_0" mesh="mdl_model_visual"/>

      <!-- 碰撞（逐一指定 class） -->
      <geom name="mdl_col_g0"  class="mdl_collision" mesh="mdl_col_0"/>
      <geom name="mdl_col_g1"  class="mdl_collision" mesh="mdl_col_1"/>
      <geom name="mdl_col_g2"  class="mdl_collision" mesh="mdl_col_2"/>
      <geom name="mdl_col_g3"  class="mdl_collision" mesh="mdl_col_3"/>
      <geom name="mdl_col_g4"  class="mdl_collision" mesh="mdl_col_4"/>
      <geom name="mdl_col_g5"  class="mdl_collision" mesh="mdl_col_5"/>
      <geom name="mdl_col_g6"  class="mdl_collision" mesh="mdl_col_6"/>
      <geom name="mdl_col_g7"  class="mdl_collision" mesh="mdl_col_7"/>
      <geom name="mdl_col_g8"  class="mdl_collision" mesh="mdl_col_8"/>
      <geom name="mdl_col_g9"  class="mdl_collision" mesh="mdl_col_9"/>
      <geom name="mdl_col_g10" class="mdl_collision" mesh="mdl_col_10"/>
      <geom name="mdl_col_g11" class="mdl_collision" mesh="mdl_col_11"/>
      <geom name="mdl_col_g12" class="mdl_collision" mesh="mdl_col_12"/>
      <geom name="mdl_col_g13" class="mdl_collision" mesh="mdl_col_13"/>
      <geom name="mdl_col_g14" class="mdl_collision" mesh="mdl_col_14"/>
      <geom name="mdl_col_g15" class="mdl_collision" mesh="mdl_col_15"/>
      <geom name="mdl_col_g16" class="mdl_collision" mesh="mdl_col_16"/>
      <geom name="mdl_col_g17" class="mdl_collision" mesh="mdl_col_17"/>
      <geom name="mdl_col_g18" class="mdl_collision" mesh="mdl_col_18"/>
      <geom name="mdl_col_g19" class="mdl_collision" mesh="mdl_col_19"/>
      <geom name="mdl_col_g20" class="mdl_collision" mesh="mdl_col_20"/>
      <geom name="mdl_col_g21" class="mdl_collision" mesh="mdl_col_21"/>
      <geom name="mdl_col_g22" class="mdl_collision" mesh="mdl_col_22"/>
      <geom name="mdl_col_g23" class="mdl_collision" mesh="mdl_col_23"/>
      <geom name="mdl_col_g24" class="mdl_collision" mesh="mdl_col_24"/>
      <geom name="mdl_col_g25" class="mdl_collision" mesh="mdl_col_25"/>
      <geom name="mdl_col_g26" class="mdl_collision" mesh="mdl_col_26"/>
      <geom name="mdl_col_g27" class="mdl_collision" mesh="mdl_col_27"/>
      <geom name="mdl_col_g28" class="mdl_collision" mesh="mdl_col_28"/>
      <geom name="mdl_col_g29" class="mdl_collision" mesh="mdl_col_29"/>
      <geom name="mdl_col_g30" class="mdl_collision" mesh="mdl_col_30"/>
      <geom name="mdl_col_g31" class="mdl_collision" mesh="mdl_col_31"/>
    </body>
  </worldbody>
</mujoco>
